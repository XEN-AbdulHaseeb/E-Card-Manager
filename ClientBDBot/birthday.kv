#WindowManager:
DetailInputScreen:
#PreviewScreen:
<PreviewScreen>:
    name:'previewscreen'
    Label:
        text:'Welcome To the Preview Screen'
    Button:
        text:'Back'
        on_release:app.root.current = 'inputscreen'

<DetailInputScreen>:
    name:'inputscreen'
    id:Detail
    BoxLayout:
        orientation:"vertical"
        Label:
            text:'Enter date:'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        BoxLayout:
            size_hint:.25,.25
            pos_hint:{'x':.38}
            GridLayout:
                cols:3
                Label:
                    text:'YYYY'
                Label:
                    text:'MM'
                Label:
                    text:'DD'
                TextInput:
                    multiline:False
                    id:Year
                    size_hint:.8,.4
                    font_size:30
                TextInput:
                    id:Month
                    multiline:False
                    size_hint:.8,.4
                    font_size:30
                TextInput:
                    id:Day
                    multiline:False
                    size_hint:.8,.4
                    font_size:30

        Label:
            text:'From?'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        TextInput:
            id:From
            multiline:False
            pos_hint:{"x":.25}
            size_hint:.5,.1
        Label:
            text:'To?'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        TextInput:
            id:To
            multiline:False
            pos_hint:{"x":.25}
            size_hint:.5,.1
        Label:
            text:'ToEmail'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        TextInput:
            id:ToEmail
            multiline:False
            pos_hint:{"x":.25}
            size_hint:.5,.1
        Label:
            text:'Font'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        Spinner:
            id:FontList
            pos_hint:{"x":.25}
            size_hint:.5,.1
            text:'JandaCelebrationScript'
            values:['JandaCelebrationScript','Amsterdam','BeautifulPeople','Countryside','LovelyMelody']
            on_text:root.onFontSelect(FontList.text)
        Label:
            text:'Templates'
            pos_hint:{"x":.25}
            size_hint:.5,.1
        GridLayout:
            rows:2
            cols:3
            pos_hint:{"x":.10}
            size_hint:.8,1
            Image:
                source:'Template_1.jpg'
            Image:
                source:'Template_2.jpg'
            Image:
                source:'Template_3.jpg'
            CheckBox:
                id:chk1
                on_active:root.on_active_checkbox(self.active,'Template_1.jpg',chk2,chk3)
            CheckBox:
                id:chk2
                on_active:root.on_active_checkbox(self.active,'Template_2.jpg',chk1,chk3)
            CheckBox:
                id:chk3
                on_active:root.on_active_checkbox(self.active,'Template_3.jpg',chk1,chk2)
        #TextInput:
            #id:Template
            #multiline:False
            #pos_hint:{"x":.25}
            #size_hint:.5,.1
        Label:
            size_hint:.5,.1
        Button:
            text: 'Schedule Email'
            size_hint:.5,.1
            pos_hint:{"x":.25}
            on_press: root.passtext(Year.text,Month.text,Day.text,From.text,To.text,ToEmail.text,root.Template,root.Font)
            #on_press:root.test()
            #on_release:app.root.current = 'previewscreen'

<TextReader>:
    BoxLayout:
        size_hint:.5,.1
<TheAppenderLmao>:
    cols: 3
    Button:
        text:"Append"
        on_press: root.appender()

<BoxLayoutExample>:
    orientation:"vertical"
    Button:
        text:"Enter your friend's details"
        color: .1,.1,.3,1
    Button:
        text:"Don't have a friend? Too bad delete this app"

<FontList>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
